title: Person
@extends:
    type: article
    context: blueprints://pages

form:
  fields:
    tabs:
      fields:
        features:
          type: tab
          title: Person Details
          icon: folder
          text: Enter details for this person

          fields:

            header.person.givenName:
              type: text
              label: First Name
              help: First name of the person
              size: medium


            header.person.familyName:
              type: text
              label: Last Name
              help: Last name of the person
              size: medium

            header.person.email:
              type: text
              label: Email
              help: email of person
              size: medium
              validate:

            header.person.familyName:
              type: text
              label: Last Name
              help: Last name of the person
              size: medium

            header.person.addess:
              # https://schema.org/PostalAddress
              type: fieldset
              title: Address
              help: person location
              info: person location
              icon: map
              collapsed: false     # Initial state of fieldset (see collapsible option)
              collapsible: true    # Whether one can expand the fieldset or not
              fields:
                header.person.address.streetAddress:
                  type: text
                  help: The street address. For example: 123 Main St.
                  label: Street Address
                header.person.addess.postOfficeBoxNumber:
                  type: text
                  help: The PO box. For example: 4444.
                  label: Post Office Box
                  size: small
                header.person.address.addressLocality:
                  type: text
                  help: The city or locality. For example: Portland.
                  label: City
                  default: Waldport
                  size: medium
                header.person.address.addressRegion:
                  type: text
                  help: The state or region. For example: OR.
                  label: State
                  default: OR
                  size: small
                header.person.address.postalCode:
                  type: text
                  help: The zip or postal code. For example: 97498.
                  label: Postal Code
                  default: 97394
                  size: small
                header.person.address.addressCountry:
                  type: text
                  help: The country or code. For example: US.
                  label: Country
                  default: US
                  size: small
