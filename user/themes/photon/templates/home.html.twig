{% extends 'collection.html.twig' %}
{% block template %}
{{ parent() }}
<!-- user/themes/photon/templates/home.html.twig -->
{% endblock template %}

{% block body_template_classes %}{{ parent() }} home{% endblock body_template_classes %}

{% block showcase -%}

  {% set options = { items: {'@taxonomy.tag': 'showcase' }, 'limit': 5, 'order': {'by': 'date', 'dir': 'desc'}, 'pagination': true } -%}
  {% set showcase_collection = page.collection(options) %}
  <section class="showcase">
    {% for article in showcase_collection %}
    {% include "_articles/article-excerpt.html.twig" with { 'article': article } %}
    {% endfor %}
  </section>

{% endblock showcase -%}


{% block list -%}
  <!-- <p>child pages: {{ page.collection.count() }}</p> -->
  {% for article in page.collection -%}
    {% if not (article.url == page.url) -%}
      {% if article.visible -%}
        {% include "_articles/article-excerpt.html.twig" with { 'article': article } %}
      {% endif %}
    {% endif %}
  {% endfor -%}
{% endblock list -%}
