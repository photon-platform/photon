# photon ✴
# v0.1.1

source ~/.bash_profile

export PROJECT_PORT="1111"
export SITE="http://photon.local"
export SERVERPATH='~/starter.photon-platform.net'
export PROJECT="~/SITES/photon"
export THEMES="user/themes/photon"
export PLUGINS="user/plugins"


alias serve="php -S localhost:${PROJECT_PORT} system/router.php"
alias site="open ${SITE}"
alias admin="open ${SITE}/admin"

alias swatch="scss --watch \
  $THEMES/scss:$THEMES/css \
  $PLUGINS/photon-event/scss:$PLUGINS/photon-event/assets \
  $PLUGINS/photon-organization/scss:$PLUGINS/photon-organization/assets \
  $PLUGINS/photon-person/scss:$PLUGINS/photon-person/assets \
  $PLUGINS/photon-project/scss:$PLUGINS/photon-project/assets \
  "

alias dry-sync="rsync -auzvhP --stats --delete --dry-run user/ illumiphi.com:${SERVERPATH}/user/"
alias sync="rsync -auzvhP --stats --delete user/ illumiphi.com:${SERVERPATH}/user/"
alias full-sync="rsync -auzvhP --stats \
  --exclude .git \
  --exclude backup \
  --exclude user/data/tntsearch/grav.index \
  --delete . illumiphi.com:${SERVERPATH}/"

function p() {
  echo "✴ $1"
  echo "$# args"
  for arg in $@
  do
    echo "- $arg"
  done

  case $1 in
    new)
      if [ $2 ]
      then
        echo "new $2"
      else
        echo "new nada"
      fi
      ;;
    acp)
      git add .
      if [ $2 ]
      then
        git commit -m "$2"
      else
        git commit
      fi
      ;;
  esac

}
